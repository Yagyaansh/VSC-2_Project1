                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="injuryMean" promptText="Mean Duration =  2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
