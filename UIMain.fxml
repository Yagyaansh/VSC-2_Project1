<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="368.0" prefWidth="407.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UIController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <Label contentDisplay="TOP" text=" Setear NFL Simulation" BorderPane.alignment="BOTTOM_LEFT">
         <font>
            <Font name="Arial Bold" size="11.0" />
         </font></Label>
   </bottom>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="31.0" prefWidth="355.0" spacing="5.0">
               <children>
                  <Label text="How many seasons would you like to run?" />
                  <TextField fx:id="numSeasons" prefHeight="25.0" prefWidth="84.0" promptText="NumSeasons" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Label>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <HBox prefHeight="32.0" prefWidth="355.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="260.0" text="Set Home Field Advantage (default = 7)" />
                  <TextField id="homeFieldAdvantage" prefHeight="27.0" prefWidth="93.0" promptText="Advantage" />
               </children>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="355.0">
               <children>
                  <Label text="Set Injury Rate (default = .9, which is 10%)" />
                  <TextField id="injuryRate" prefHeight="27.0" prefWidth="94.0" promptText="Injury Rate" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startSimulation" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#startSimulation" text="Start Simulation">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
