<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane onMouseMoved="#initScene2" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UIController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Continue With Season" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="weeksToRun" prefHeight="25.0" prefWidth="83.0" promptText="numWeeks" />
                  <Button fx:id="contSim" mnemonicParsing="false" text="Continue" />
                  <Button fx:id="button2" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#handleButtonAction" text="Goto Scene 1" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Get Statistics:">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children></HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Get Game Results" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="gameResultsChoiceBox" prefWidth="150.0" />
                  <Button fx:id="subGameResults" mnemonicParsing="false" text="Submit" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="135.0" spacing="10.0">
               <children>
                  <Label text="Get Win/Loss Ratios" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="winLossChoiceBox" prefWidth="150.0" />
                  <Button fx:id="subWinLoss" mnemonicParsing="false" text="Submit" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="160.0" spacing="10.0">
               <children>
                  <Label text="Get Team Roster Details" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="teamRosterChoiceBox" prefWidth="150.0" />
                  <Button fx:id="subTeamRoster" mnemonicParsing="false" text="Submit" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="185.0" spacing="10.0">
               <children>
                  <Label text="Get Team Revenue" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="teamRevenueChoiceBox" prefWidth="150.0" />
                  <Button fx:id="subTeamRevenue" mnemonicParsing="false" text="Submit" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="10.0">
               <children>
                  <Label text="Game Stats for one Week" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="weekNum" prefHeight="25.0" prefWidth="83.0" promptText="Week " />
                  <Button fx:id="subWeekGames" mnemonicParsing="false" text="Submit" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="statOutput" prefHeight="200.0" prefWidth="200.0" text=" " />
            <Label alignment="BOTTOM_LEFT" text="Setear NFL Simulation">
               <font>
                  <Font name="Arial Bold" size="11.0" />
               </font>
               <padding>
                  <Insets bottom="3.0" left="3.0" />
               </padding>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
</BorderPane>
